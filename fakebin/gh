#!/usr/bin/env bash
set -euo pipefail
echo "FAKE_GH: $@" >&2

case "${1:-} ${2:-}" in
  "pr list")
    echo '[{"number":101,"isDraft":true}]'
    ;;
  "pr edit")
    echo "edited:101"
    ;;
  "pr create")
    echo "ERR: should not create when update-if-exists" >&2
    exit 1
    ;;
  *)
    echo "fake gh passthrough: $@" >&2
    ;;
esac
